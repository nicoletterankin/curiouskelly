{
  "name": "@acme/gateway",
  "version": "0.1.0",
  "description": "HTTP gateway exposing REST APIs for the daily lesson platform.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsup src/index.ts --format esm --dts",
    "start": "node dist/index.js",
    "lint": "pnpm exec eslint \"src/**/*.{ts,tsx}\"",
    "lint:fix": "pnpm exec eslint \"src/**/*.{ts,tsx}\" --fix",
    "test": "pnpm exec vitest run",
    "test:watch": "pnpm exec vitest watch"
  },
  "dependencies": {
    "@acme/config": "workspace:*",
    "@acme/database": "workspace:*",
    "@acme/logger": "workspace:*",
    "@acme/service-auth": "workspace:*",
    "@acme/service-classroom": "workspace:*",
    "@acme/service-entitlements": "workspace:*",
    "@acme/service-lessons": "workspace:*",
    "@acme/service-payments": "workspace:*",
    "@acme/service-schedule": "workspace:*",
    "@acme/service-search": "workspace:*",
    "@acme/service-telemetry": "workspace:*",
    "@acme/types": "workspace:*",
    "@fastify/cookie": "^11.0.2",
    "@fastify/jwt": "^10.0.0",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/secure-session": "^7.4.0",
    "@fastify/swagger": "^9.6.0",
    "@fastify/swagger-ui": "^5.2.3",
    "fastify": "^4.26.2",
    "fastify-raw-body": "^5.0.0",
    "fastify-type-provider-zod": "^2.0.0",
    "zod": "^3.23.8",
    "zod-to-json-schema": "^3.22.4"
  },
  "devDependencies": {
    "tsup": "^8.1.0",
    "tsx": "^4.15.3",
    "vitest": "^1.6.0"
  }
}

