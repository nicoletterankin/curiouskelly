{
  "name": "@acme/classroom",
  "version": "0.1.0",
  "description": "Realtime classroom control plane for LiveKit and WebSocket events.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsup src/index.ts --format esm --dts",
    "start": "node dist/index.js",
    "lint": "pnpm exec eslint \"src/**/*.{ts,tsx}\"",
    "lint:fix": "pnpm exec eslint \"src/**/*.{ts,tsx}\" --fix",
    "test": "pnpm exec vitest run"
  },
  "dependencies": {
    "@acme/config": "workspace:*",
    "@acme/logger": "workspace:*",
    "@acme/service-classroom": "workspace:*",
    "@fastify/websocket": "^10.0.0",
    "fastify": "^4.26.2"
  },
  "devDependencies": {
    "tsup": "^8.1.0",
    "tsx": "^4.15.3",
    "vitest": "^1.6.0"
  }
}

