{
  "name": "daily-lesson-platform",
  "private": true,
  "version": "0.1.0",
  "description": "Production-grade backend platform for daily lessons and hourly live classes.",
  "packageManager": "pnpm@9.9.0",
  "scripts": {
    "dev": "pnpm --recursive run dev",
    "build": "pnpm --recursive run build",
    "lint": "pnpm --recursive run lint",
    "lint:fix": "pnpm --recursive run lint:fix",
    "test": "pnpm run test:unit && pnpm run test:integration",
    "test:unit": "pnpm --dir tests run test:unit",
    "test:integration": "pnpm --dir tests run test:integration",
    "test:e2e": "pnpm --dir tests run test:e2e",
    "test:load": "pnpm --dir tests run test:load",
    "test:all": "pnpm --dir tests run test:all",
    "prisma:generate": "pnpm --filter prisma-client run generate",
    "prepare": "husky install"
  },
  "engines": {
    "node": ">=20.11.1",
    "pnpm": ">=9.9.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "eslint": "^9.10.0",
    "@eslint/js": "^9.10.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.3.3",
    "prisma": "^5.20.0",
    "typescript": "^5.4.5"
  },
  "lint-staged": {
    "*.{ts,tsx,js,cts,mts}": "pnpm exec eslint --fix",
    "*.{json,md,yml,yaml}": "pnpm exec prettier --write"
  }
}