{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": false,
    "noImplicitOverride": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "types": ["node"],
    "paths": {
      "@acme/*": ["packages/*/src"],
      "@acme/service-auth": ["services/auth/src"],
      "@acme/service-entitlements": ["services/entitlements/src"],
      "@acme/service-lessons": ["services/lessons/src"],
      "@acme/service-schedule": ["services/schedule/src"],
      "@acme/service-classroom": ["services/classroom/src"],
      "@acme/service-payments": ["services/payments/src"],
      "@acme/service-notifications": ["services/notifications/src"],
      "@acme/service-search": ["services/search/src"],
      "@acme/service-telemetry": ["services/telemetry/src"],
      "@acme/service-ops": ["services/ops/src"]
    }
  },
  "exclude": ["node_modules", "dist"]
}

