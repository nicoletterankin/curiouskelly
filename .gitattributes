# Remove LFS tracking for PNG files (causing Cloudflare build failures)
# PNG files are small enough to store directly in Git
*.png -filter -diff -merge

# LFS tracking for large files only
*.wav filter=lfs diff=lfs merge=lfs -text
*.mp4 filter=lfs diff=lfs merge=lfs -text
*.tif filter=lfs diff=lfs merge=lfs -text
*.iProject filter=lfs diff=lfs merge=lfs -text
*.ccProject filter=lfs diff=lfs merge=lfs -text
