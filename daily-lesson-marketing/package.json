{
  "name": "daily-lesson-marketing",
  "type": "module",
  "version": "1.0.0",
  "description": "Production-ready Jamstack marketing site for The Daily Lesson",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "build:check": "astro check && astro build",
    "preview": "astro preview",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx,.astro",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx,.astro --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,astro,json,css,scss,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,astro,json,css,scss,md}\"",
    "stylelint": "stylelint \"**/*.{css,scss}\"",
    "stylelint:fix": "stylelint \"**/*.{css,scss}\" --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:lighthouse": "lhci autorun",
    "mock-crm": "node scripts/mock-crm-server.js"
  },
  "dependencies": {
    "@astrojs/react": "^3.6.0",
    "@astrojs/vercel": "^8.0.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "astro": "^5.0.0",
    "bootstrap": "^4.6.2",
    "intl-tel-input": "^23.0.0",
    "libphonenumber-js": "^1.11.0",
    "jquery": "^3.7.1",
    "jquery-migrate": "^3.4.1",
    "popper.js": "^1.16.1",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "sharp": "^0.33.0",
    "slick-carousel": "^1.8.1"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.0",
    "@lhci/cli": "^0.12.0",
    "@playwright/test": "^1.40.0",
    "@types/bootstrap": "^4.6.2",
    "@types/jquery": "^3.5.29",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "eslint-plugin-astro": "^0.29.0",
    "prettier": "^3.1.0",
    "prettier-plugin-astro": "^0.13.0",
    "sass": "^1.69.5",
    "stylelint": "^15.11.0",
    "stylelint-config-standard-scss": "^11.1.0",
    "typescript": "^5.3.2",
    "vite-plugin-purgecss": "^0.2.13",
    "vitest": "^1.0.0",
    "workbox-build": "^7.0.0"
  },
  "engines": {
    "node": "18.20.0",
    "npm": ">=9.0.0"
  }
}
