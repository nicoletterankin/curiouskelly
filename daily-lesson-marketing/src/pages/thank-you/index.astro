---
import SiteLayout from '@layouts/SiteLayout.astro';
import { getDictionary, buildLocalizedPath, normaliseLocale } from '@lib/i18n';
import type { LocaleCode } from '@lib/i18n/types';

const locale = normaliseLocale(Astro.url.pathname);
const dictionary = getDictionary(locale);
const nonce = crypto.randomUUID();
---

<SiteLayout
  dictionary={dictionary}
  locale={locale}
  currentPath="/thank-you/"
  routeKey="thank-you"
  title={`Thank You — Curious Kelly`}
  description="Thank you for your submission"
  nonce={nonce}
>
  <section class="thank-you-section">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-md-8 text-center">
          <div class="thank-you-icon">✓</div>
          <h1>{dictionary.thankYou.heading}</h1>
          <p class="lead">{dictionary.thankYou.body}</p>
          <a href={buildLocalizedPath('/', locale)} class="btn btn-primary btn-lg">
            {dictionary.thankYou.back}
          </a>
        </div>
      </div>
    </div>
  </section>
</SiteLayout>

<style>
  .thank-you-section {
    padding: 6rem 0;
    min-height: 60vh;
    display: flex;
    align-items: center;
  }

  .thank-you-icon {
    width: 100px;
    height: 100px;
    margin: 0 auto 2rem;
    background: #28a745;
    color: #fff;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 4rem;
    font-weight: 700;
  }

  .thank-you-section h1 {
    margin-bottom: 1.5rem;
    font-size: 3rem;
  }

  .lead {
    font-size: 1.25rem;
    margin-bottom: 2rem;
    color: #6c757d;
  }
</style>











