{
  "name": "@acme/service-auth",
  "version": "0.1.0",
  "description": "Authentication service handling passkeys, magic links, sessions, and device binding.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts",
    "dev": "tsup src/index.ts --watch --format esm",
    "lint": "pnpm exec eslint \"src/**/*.{ts,tsx}\"",
    "lint:fix": "pnpm exec eslint \"src/**/*.{ts,tsx}\" --fix",
    "test": "pnpm exec vitest run"
  },
  "dependencies": {
    "@acme/config": "workspace:*",
    "@acme/database": "workspace:*",
    "@acme/logger": "workspace:*",
    "@acme/service-notifications": "workspace:*",
    "@acme/types": "workspace:*",
    "@simplewebauthn/server": "^8.3.4",
    "@simplewebauthn/typescript-types": "^8.3.4",
    "argon2": "^0.40.3",
    "date-fns": "^3.6.0",
    "jose": "^5.3.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "tsup": "^8.1.0",
    "vitest": "^1.6.0"
  }
}

