{
  "name": "@acme/service-classroom",
  "version": "0.1.0",
  "description": "Classroom service for LiveKit token minting, room lifecycle, and moderation.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts",
    "dev": "tsup src/index.ts --watch --format esm",
    "lint": "pnpm exec eslint \"src/**/*.{ts,tsx}\"",
    "lint:fix": "pnpm exec eslint \"src/**/*.{ts,tsx}\" --fix",
    "test": "pnpm exec vitest run"
  },
  "dependencies": {
    "@acme/config": "workspace:*",
    "@acme/database": "workspace:*",
    "@acme/logger": "workspace:*",
    "@acme/types": "workspace:*",
    "bullmq": "^5.13.1",
    "ioredis": "^5.4.1",
    "livekit-server-sdk": "^2.4.1"
  },
  "devDependencies": {
    "tsup": "^8.1.0",
    "vitest": "^1.6.0"
  }
}

