{
  "name": "@acme/service-telemetry",
  "version": "0.1.0",
  "description": "Telemetry ingestion service with privacy-first analytics and ClickHouse sink.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts",
    "dev": "tsup src/index.ts --watch --format esm",
    "lint": "pnpm exec eslint \"src/**/*.{ts,tsx}\"",
    "lint:fix": "pnpm exec eslint \"src/**/*.{ts,tsx}\" --fix",
    "test": "pnpm exec vitest run"
  },
  "dependencies": {
    "@acme/config": "workspace:*",
    "@acme/logger": "workspace:*",
    "@clickhouse/client": "^1.7.0"
  },
  "devDependencies": {
    "tsup": "^8.1.0",
    "vitest": "^1.6.0"
  }
}

