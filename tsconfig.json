{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react-jsx",
    "types": [
      "astro/client",
      "@types/node"
    ],
    "paths": {
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@lib/*": ["src/lib/*"],
      "@styles/*": ["styles/*"],
      "@tests/*": ["tests/*"]
    }
  },
  "include": [
    "src",
    "functions",
    "api",
    "scripts",
    "tests",
    "astro.config.mjs"
  ]
}

