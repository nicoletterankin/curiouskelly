{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://kelly-os.io/schemas/lesson.json",
  "title": "Lesson",
  "description": "A teachable unit with content and synchronization data",
  "type": "object",
  "required": ["id", "title", "script"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the lesson"
    },
    "title": {
      "type": "string",
      "description": "Display title for the lesson"
    },
    "script": {
      "type": "string",
      "description": "Full text/script content of the lesson"
    },
    "audioPath": {
      "type": "string",
      "description": "Path to audio file (WAV) for playback"
    },
    "a2fPath": {
      "type": "string",
      "description": "Path to Audio2Face frames (JSON) for facial animation"
    },
    "duration": {
      "type": "integer",
      "description": "Duration in seconds (if known)",
      "minimum": 0
    }
  }
}



















