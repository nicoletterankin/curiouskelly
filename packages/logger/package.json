{
  "name": "@acme/logger",
  "version": "0.1.0",
  "description": "Pino-based logger with OpenTelemetry correlation and PII scrubbing.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts",
    "dev": "tsup src/index.ts --format esm --watch",
    "lint": "pnpm exec eslint \"src/**/*.{ts,tsx}\"",
    "lint:fix": "pnpm exec eslint \"src/**/*.{ts,tsx}\" --fix",
    "test": "pnpm exec vitest run"
  },
  "dependencies": {
    "@acme/config": "workspace:*",
    "@acme/types": "workspace:*",
    "otel": "npm:@opentelemetry/api@^1.9.0",
    "pino": "^9.3.0",
    "pino-pretty": "^11.2.0",
    "pino-std-serializers": "^7.0.0"
  },
  "devDependencies": {
    "tsup": "^8.1.0",
    "vitest": "^1.6.0"
  }
}

