{
  "version": 2,
  "name": "the-daily-lesson",
  "builds": [
    {
      "src": "lesson-player/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/lesson-player/index.html"
    },
    {
      "src": "/lesson-player/(.*)",
      "dest": "/lesson-player/$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    },
    {
      "source": "/videos/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "functions": {
    "api/lessons.js": {
      "maxDuration": 10
    },
    "api/analytics.js": {
      "maxDuration": 5
    }
  },
  "env": {
    "ELEVENLABS_API_KEY": "@elevenlabs-api-key",
    "STRIPE_SECRET_KEY": "@stripe-secret-key",
    "ANALYTICS_ID": "@analytics-id"
  }
}

